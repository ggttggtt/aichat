/* 页面容器 */
.detail-container {
  padding-bottom: 120rpx; /* 留出底部评论框的空间 */
}

/* 动态卡片 */
.moment-card {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name-time {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 动态内容 */
.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

/* 图片区域 */
.image-container {
  margin: 20rpx 0;
}

.single-image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 8rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-image {
  width: 31%;
  height: 220rpx;
  margin-right: 3%;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
}

.grid-image:nth-child(3n) {
  margin-right: 0;
}

/* 位置信息 */
.location {
  display: flex;
  align-items: center;
  color: #576b95;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.location-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 操作区 */
.action-bar {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.action-item.active {
  color: #f34a7d;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

/* 评论区样式 */
.comment-section {
  background-color: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.comment-list {
  border-top: 1rpx solid #eee;
  padding-top: 15rpx;
}

.comment-item {
  margin-bottom: 30rpx;
}

.comment-user-info {
  display: flex;
  align-items: flex-start;
}

.comment-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.comment-right {
  flex: 1;
}

.comment-name-content {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.comment-name {
  font-size: 28rpx;
  color: #576b95;
  font-weight: 500;
  margin-right: 8rpx;
}

.reply-to {
  font-size: 28rpx;
  color: #333;
  margin: 0 8rpx;
}

.reply-name {
  font-size: 28rpx;
  color: #576b95;
  margin-right: 8rpx;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

.comment-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  font-size: 24rpx;
  color: #576b95;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.like-btn {
  display: flex;
  align-items: center;
}

.like-btn.active {
  color: #f34a7d;
}

.like-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

.action-btn.delete {
  color: #f56c6c;
}

.no-comment {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 评论输入栏 */
.comment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 10rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  z-index: 1000;
}

.input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 32rpx;
  padding: 8rpx 20rpx;
  margin-right: 20rpx;
}

.comment-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
}

.emoji-button {
  padding: 10rpx;
}

.emoji-icon {
  width: 48rpx;
  height: 48rpx;
}

.send-btn {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #999;
  border-radius: 32rpx;
  background-color: #f8f8f8;
}

.send-btn.active {
  color: #fff;
  background-color: #ff5722;
} 