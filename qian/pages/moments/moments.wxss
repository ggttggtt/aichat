.moments-container {
  padding-bottom: 100rpx;
  min-height: 100vh;
  background-color: #f6f6f6;
}

.header {
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 动态列表 */
.moments-list {
  padding: 0 20rpx;
}

.moment-item {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name-time {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 动态内容 */
.moment-content {
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

/* 图片区域 */
.image-container {
  margin: 20rpx 0;
}

.single-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-image {
  width: calc(33.33% - 10rpx);
  height: 200rpx;
  margin: 5rpx;
  border-radius: 8rpx;
}

/* 位置信息 */
.location {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

/* 点赞评论区域 */
.interaction-bar {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
  margin-top: 20rpx;
}

.like-comment-count {
  display: flex;
  margin-bottom: 16rpx;
}

.count-item {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

.action-buttons {
  display: flex;
}

.action-button {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-right: 40rpx;
}

.action-button.liked {
  color: #FF4D67;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 评论区域 */
.comments-section {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.comment-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.comment-user {
  color: #576b95;
  font-weight: 500;
}

.comment-content {
  color: #333;
}

.view-more-comments {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 加载中和没有更多 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 发布按钮 */
.publish-button {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #FF4D67;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(255, 77, 103, 0.3);
}

.publish-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 评论区样式 */
.comment-area {
  margin-top: 10rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 15rpx;
}

.comment-item {
  margin-bottom: 15rpx;
}

.comment-user-info {
  display: flex;
  align-items: flex-start;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.comment-right {
  flex: 1;
}

.comment-name-content {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.comment-name {
  font-size: 26rpx;
  color: #576b95;
  font-weight: 500;
  margin-right: 8rpx;
}

.reply-to {
  font-size: 26rpx;
  color: #333;
  margin: 0 8rpx;
}

.reply-name {
  font-size: 26rpx;
  color: #576b95;
  margin-right: 8rpx;
}

.comment-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.view-more {
  font-size: 24rpx;
  color: #576b95;
  text-align: center;
  padding: 10rpx 0;
}

/* 操作区样式 */
.action-bar {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.action-item.active {
  color: #f34a7d;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
} 