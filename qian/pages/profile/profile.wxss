.profile-container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  position: relative;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.edit-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 28rpx;
  color: #FF4D67;
}

/* 公共部分 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* 照片部分 */
.photo-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.photo-tip {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
}

.photo-item {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  position: relative;
}

.photo {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4d67;
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 32rpx;
}

.photo-add {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #ff4d67;
  margin-top: 20rpx;
}

/* 基本资料部分 */
.info-section, .bio-section, .tags-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  color: #333;
  font-size: 28rpx;
}

.form-content {
  color: #666;
  font-size: 28rpx;
  text-align: right;
}

.form-input {
  text-align: right;
  width: 60%;
}

.radio-group {
  display: flex;
}

.radio {
  margin-left: 30rpx;
}

.picker {
  color: #666;
  font-size: 28rpx;
}

/* 个人介绍 */
.bio-content {
  text-align: left;
  margin-top: 20rpx;
  line-height: 1.6;
}

.bio-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 标签部分 */
.tag-tip {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.tags-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag-item {
  background-color: #f5f5f5;
  color: #666;
  border-radius: 30rpx;
  padding: 12rpx 30rpx;
  margin: 10rpx;
  font-size: 24rpx;
  transition: all 0.3s;
}

.tag-item-hover {
  transform: scale(1.05);
}

.tag-item.selected {
  background-color: #FF4D67;
  color: white;
}

/* 按钮部分 */
.button-group {
  margin: 40rpx 30rpx;
}

.btn-primary {
  background-color: #FF4D67;
  color: white;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.btn-secondary {
  background-color: white;
  color: #FF4D67;
  border: 1rpx solid #FF4D67;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

/* 退出登录 */
.logout-btn {
  margin: 40rpx 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
} 