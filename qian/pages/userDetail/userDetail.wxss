.user-detail-container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  color: #999;
}

/* 照片轮播 */
.photo-swiper {
  width: 100%;
  height: 500rpx;
}

.user-photo {
  width: 100%;
  height: 100%;
}

/* 照片指示器 */
.photo-indicator {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ddd;
  margin: 0 8rpx;
}

.indicator-dot.active {
  background-color: #FF4D67;
  width: 24rpx;
  height: 16rpx;
  border-radius: 8rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  margin: 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* 用户基本信息 */
.user-name-age {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.user-age {
  font-size: 32rpx;
  color: #666;
}

.user-location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.user-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background-color: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  color: #666;
}

/* 个人简介 */
.user-bio {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 详细资料 */
.user-details {
  margin-top: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  color: #999;
  font-size: 28rpx;
}

.detail-value {
  color: #333;
  font-size: 28rpx;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 30rpx;
}

.action-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-button image {
  width: 60%;
  height: 60%;
}

.dislike {
  background-color: #fff;
  border: 1px solid #eee;
}

.like {
  background-color: #FF4D67;
  border: 1px solid #FF4D67;
} 