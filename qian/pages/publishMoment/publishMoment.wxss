.publish-container {
  min-height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

/* 内容输入区 */
.content-input-area {
  padding: 30rpx;
  position: relative;
}

.content-input {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.word-count {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 图片区域 */
.image-area {
  padding: 0 30rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 32rpx;
}

.add-image {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
}

/* 位置区域 */
.location-area {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.location-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.location-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-text {
  font-size: 28rpx;
  color: #333;
}

.delete-location {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #999;
}

/* 提交区域 */
.submit-area {
  padding: 30rpx;
  margin-top: auto;
}

.submit-button {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FF4D67;
  color: white;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.submit-button.disabled {
  background-color: #f5f5f5;
  color: #999;
} 